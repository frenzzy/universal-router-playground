{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./lib",
    "target": "es5",
    "module": "amd",
    "moduleResolution": "node",
    "importHelpers": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "strictNullChecks": false,
    "experimentalDecorators": true,
    "allowJs": false,
    "skipLibCheck": false,
    "alwaysStrict": false,
    "noImplicitUseStrict": true,
    "esModuleInterop": false,
    "downlevelIteration": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es5",
      "es2015"
    ],
    "typeRoots": [],
    "types": [],
    "paths": {
      "@hpcc-js/*": [
        "./node_modules/@hpcc-js/*",
        "../../../hpcc-js/packages/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}